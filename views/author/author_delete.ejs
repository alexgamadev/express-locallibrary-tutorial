<h1>Author: <%= author.full_name %></h1>
<p>(<%= author.dob_formatted %> - <%= author.dod_formatted %>)</p>

<% if (locals.books?.length > 0) { %>
  <p><b>Delete the following books before attempting to delete this author: </b></p>
  <div style='margin-left:20px;margin-top:20px'>
    <h4>Books</h4>
    <ul>
      <% books.forEach( book => { %>
        <li>
          <a href="<%= book.url %>"><%= book.title %></a>
        </li>
      <% }) %>
    </ul>
  </div>
<% } else { %>
  <p><b>Do you really want to delete this Author?</b></p>
  <form action="" method="POST">
    <input id="authorid" class="form-control mb-2" type="hidden", name="authorid"
        value="<%= locals.author?._id %>"
      >
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>