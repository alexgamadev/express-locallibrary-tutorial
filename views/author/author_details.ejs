<h1>Author: <%= author.full_name %></h1>

<p>(<%= author.dob_formatted %> - <%= author.dod_formatted %>)</p>
<div style='margin-left:20px;margin-top:20px'>
  <h4>Books</h4>
  <% books.forEach( book => { %>
    <hr></hr>
    <p><a href="<%= book.url %>"><%= book.title %></a></p>
    <p><%= book.summary %></p>
  <% }) %>
</div>
<hr>
<p><a href="<%= author.url+'/delete' %>">Delete author</a></p>
<p><a href="<%= author.url+'/update' %>">Update author</a></p>
